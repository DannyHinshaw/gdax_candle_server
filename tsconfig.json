{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"DOM",
			"ES6",
			"ES2015",
			"ES2016",
			"ES2017"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"target": "es2017"
	},
	"exclude": [
		"node_modules"
	]
}
